<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
   <parent>
      <groupId>org.apache.amq</groupId>
      <artifactId>training</artifactId>
      <version>1.0.0-SNAPSHOT</version>
   </parent>
   <modelVersion>4.0.0</modelVersion>
   <artifactId>simple</artifactId>
   <packaging>jar</packaging>

   <profiles>
      <profile>
         <id>queueSender</id>
         <build>
            <plugins>
               <plugin>
                 <groupId>org.codehaus.mojo</groupId>
                 <artifactId>exec-maven-plugin</artifactId>
                 <version>1.5.0</version>
                 <executions>
                   <execution>
                      <phase>verify</phase>
                     <goals>
                       <goal>java</goal>
                     </goals>
                   </execution>
                 </executions>
                 <configuration>
                    <mainClass>org.apache.amq.jms.QueueSender</mainClass>
                 </configuration>
               </plugin>
            </plugins>
         </build>
      </profile>
      <profile>
         <id>queueReceiver</id>
         <build>
            <plugins>
               <plugin>
                 <groupId>org.codehaus.mojo</groupId>
                 <artifactId>exec-maven-plugin</artifactId>
                 <version>1.5.0</version>
                 <executions>
                   <execution>
                      <phase>verify</phase>
                     <goals>
                       <goal>java</goal>
                     </goals>
                   </execution>
                 </executions>
                 <configuration>
                    <mainClass>org.apache.amq.jms.QueueReceiver</mainClass>
                 </configuration>
               </plugin>
            </plugins>
         </build>
      </profile>
      <profile>
         <id>topicReceiver</id>
         <build>
            <plugins>
               <plugin>
                 <groupId>org.codehaus.mojo</groupId>
                 <artifactId>exec-maven-plugin</artifactId>
                 <version>1.5.0</version>
                 <executions>
                   <execution>
                      <phase>verify</phase>
                     <goals>
                       <goal>java</goal>
                     </goals>
                   </execution>
                 </executions>
                 <configuration>
                    <mainClass>org.apache.amq.jms.TopicReceiver</mainClass>
                 </configuration>
               </plugin>
            </plugins>
         </build>
      </profile>
      <profile>
         <id>topicSender</id>
         <build>
            <plugins>
               <plugin>
                 <groupId>org.codehaus.mojo</groupId>
                 <artifactId>exec-maven-plugin</artifactId>
                 <version>1.5.0</version>
                 <executions>
                   <execution>
                      <phase>verify</phase>
                     <goals>
                       <goal>java</goal>
                     </goals>
                   </execution>
                 </executions>
                 <configuration>
                    <mainClass>org.apache.amq.jms.TopicSender</mainClass>
                 </configuration>
               </plugin>
            </plugins>
         </build>
      </profile>
   </profiles>

   <build>
      <plugins>
         <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-compiler-plugin</artifactId>
            <configuration>
               <source>1.8</source>
               <target>1.8</target>
            </configuration>
         </plugin>
      </plugins>
   </build>

</project>
